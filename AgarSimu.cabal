name:                agarsimu
version:             0.1.0.6
synopsis:            AgarSimu is a library to simulate a game similar to Agar.io
-- description:         
homepage:            https://github.com/mvpossum/agarsimu
license:             BSD3
license-file:        LICENSE
author:              Martin Villagra
maintainer:          Martin Villagra <mvillagra0@hotmail.com>
-- copyright:           
category:            Simulation
build-type:          Simple
extra-source-files:  README.md
homepage:            https://github.com/mvpossum/agarsimu
bug-reports:         https://github.com/mvpossum/agarsimu/issues
cabal-version:       >=1.10

Source-repository head
    type:     git
    location: git://github.com/mvpossum/agarsimu.git

library
  exposed-modules:     AgarSimu, AgarSimu.Core, AgarSimu.PublicEntities, AgarSimu.PreFab 
  other-modules:       AgarSimu.Bola, AgarSimu.Input, AgarSimu.Render, AgarSimu.Utils
  build-depends:       netwire >=5.0.1 && <5.1, SDL-gfx, SDL, vector-space, lens, MonadRandom, transformers, containers, base
  default-language:    Haskell2010

Test-Suite agarsimu-test
    type:       exitcode-stdio-1.0
    build-depends: agarsimu, netwire >=5.0, MonadRandom, base 
    default-language: Haskell2010
    hs-source-dirs: test
    main-is: Test.hs
